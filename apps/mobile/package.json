    "expo-system-ui": "~5.0.7",
    "expo-web-browser": "~14.1.6",
    "leaflet-rotatedmarker": "^0.2.0",
    "lodash": "^4.17.21",
    "react": "19.0.0",
    "react-dom": "19.0.0",
