    "expo-haptics": "~14.1.4",
    "expo-linking": "~7.1.5",
    "expo-location": "~18.1.5",
    "expo-router": "^5.0.7",
    "expo-secure-store": "^14.2.3",
    "expo-sensors": "~14.1.4",
    "expo-splash-screen": "~0.30.8",
    "expo-status-bar": "~2.2.3",
